.page-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f8f8;
}

.form-header {
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.form-scroll {
  flex: 1;
  overflow-y: auto;
}

.form-container {
  padding: 20rpx 30rpx 120rpx;
}

.form-section {
  margin-bottom: 40rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.required::after {
  content: '*';
  color: #e64340;
  margin-left: 6rpx;
}

.form-input {
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 25rpx;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.form-picker {
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  color: #333;
}

.cover-uploader {
  width: 100%;
  height: 360rpx;
  border: 1rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fafafa;
}

.cover-preview {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
}

.upload-icon {
  font-size: 60rpx;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 28rpx;
}

.tag-input-area {
  display: flex;
  margin-bottom: 16rpx;
}

.tag-input {
  flex: 1;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx 0 0 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.tag-add-btn {
  width: 120rpx;
  height: 80rpx;
  background-color: #3E7BFA;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  border-radius: 0 8rpx 8rpx 0;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  margin-top: 16rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  background-color: #f0f5ff;
  border-radius: 30rpx;
  padding: 8rpx 16rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

.tag-text {
  font-size: 26rpx;
  color: #3E7BFA;
  margin-right: 8rpx;
}

.tag-remove {
  font-size: 26rpx;
  color: #999;
}

.form-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  z-index: 99;
}

.btn {
  width: 30%;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.submit-btn {
  background-color: #4CAF50; /* 使用绿色，与其他编辑活动按钮保持一致 */
  color: #fff;
}

.delete-btn {
  background-color: #E64340; /* 使用红色，表示危险操作 */
  color: #fff;
}

.full-width-delete {
  width: 100%;
  margin: 10rpx 0;
}

.placeholder-text {
  color: #999;
}

.time-period-container {
  display: flex;
  flex-direction: column;
}

.time-picker-wrapper {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.time-picker-start, .time-picker-end {
  flex: 1;
}

.time-separator {
  margin: 0 10rpx;
  color: #666;
}

.form-picker {
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  background-color: #f9f9f9;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #333;
}

.duration-buttons {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.duration-btn {
  width: 23%;
  height: 60rpx;
  background-color: #f5f5f5;
  color: #666;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 30rpx;
  margin-bottom: 10rpx;
}

.duration-btn.selected {
  background-color: #e6f0ff;
  color: #3E7BFA;
  border: 1rpx solid #3E7BFA;
}

