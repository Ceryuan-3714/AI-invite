}

.add-new-tag-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.add-new-tag-btn[disabled] {
  background: linear-gradient(135deg, #e2e8f0 0%, #cbd5e0 100%);
