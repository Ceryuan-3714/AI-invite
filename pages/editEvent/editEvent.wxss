}

/* 预设标签管理样式 */
.preset-tags-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.preset-tags-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.preset-tags-manage {
  font-size: 24rpx;
  color: #007aff;
  padding: 8rpx 16rpx;
  border: 1rpx solid #007aff;
  border-radius: 8rpx;
  background: transparent;
}

.preset-tags-manage:active {
  background: rgba(0, 122, 255, 0.1);
}

.no-preset-tags {
  text-align: center;
  padding: 40rpx 0;
}

.no-tags-text {
  color: #a0aec0;
  font-size: 28rpx;
  text-align: center;
  padding: 40rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  border: 1rpx dashed rgba(102, 126, 234, 0.3);
}

/* 预设标签容器 */
.preset-tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: rgba(102, 126, 234, 0.03);
  border-radius: 16rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.1);
}

/* 预设标签项 */
.preset-tag-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 24rpx;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(248, 250, 252, 0.9) 100%);
  border: 2rpx solid rgba(102, 126, 234, 0.2);
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  color: #4a5568;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
  position: relative;
  overflow: hidden;
  min-width: 80rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.1);
}

/* 预设标签项悬停效果 */
.preset-tag-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
  border-color: rgba(102, 126, 234, 0.4);
}

/* 预设标签项点击效果 */
.preset-tag-item:active {
  transform: translateY(0rpx) scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.15);
}

/* 预设标签项选中状态 */
.preset-tag-item.selected {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-color: #667eea;
  color: #ffffff;
  font-weight: 600;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.4);
  transform: translateY(-1rpx);
}

/* 选中状态的悬停效果 */
.preset-tag-item.selected:hover {
  background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
  transform: translateY(-3rpx);
  box-shadow: 0 6rpx 24rpx rgba(102, 126, 234, 0.5);
}

/* 选中状态的点击效果 */
.preset-tag-item.selected:active {
  transform: translateY(-1rpx) scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
}

/* 添加一个微妙的动画效果 */
.preset-tag-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.5s ease;
}

.preset-tag-item:hover::before {
  left: 100%;
}

/* 选中状态时隐藏光效 */
.preset-tag-item.selected::before {
  display: none;
}

/* 预设标签管理弹窗 */
.preset-tags-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(10rpx);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 90%;
  max-width: 600rpx;
  max-height: 80%;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  border-bottom: 1rpx solid rgba(102, 126, 234, 0.2);
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2d3748;
}

.modal-close {
  font-size: 44rpx;
  color: #667eea;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.modal-close:active {
  background: rgba(102, 126, 234, 0.1);
  transform: scale(0.9);
}

.modal-body {
  padding: 40rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.add-tag-section {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: rgba(102, 126, 234, 0.05);
  border-radius: 16rpx;
  border: 1rpx solid rgba(102, 126, 234, 0.1);
}

.new-tag-input {
  width: 100%;
  padding: 28rpx 24rpx;
  border: 2rpx solid rgba(102, 126, 234, 0.2);
  border-radius: 16rpx;
  font-size: 30rpx;
  background: rgba(255, 255, 255, 0.9);
  color: #2d3748;
