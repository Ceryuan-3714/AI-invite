  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  background-color: #f9f9f9;
}

.sub-item {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  border: 1rpx solid #eee;
}

.time-offset-select {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.slim-picker {
  width: 200rpx;
  height: 70rpx;
  border-radius: 8rpx;
}

.topic-options {
  margin-top: 10rpx;
}

.topic-option {
