/* login.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  min-height: 100vh;
  padding: 0;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  background-color: #FFFFFF;
}

.login-header-bg {
  width: 100%;
  height: 60vh;
  background-image: url('cloud://your-cloud-env-id.your-cloud-path/images/login_top_bg.png');
  background-color: #ffffff;
  background-size: cover;
  background-position: center bottom;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 0;
  position: relative;
}

.login-page-logo {
  width: 400rpx;
  height: 150rpx;
}

.app-name {
  display: none;
}

.app-slogan {
  display: none;
}

.login-form {
  width: 100%;
  max-width: 100%;
  padding: 60rpx 40rpx;
  background: #FFFFFF;
  border-radius: 40rpx 40rpx 0 0;
  margin-top: -40rpx;
  position: relative;
  z-index: 1;
  box-sizing: border-box;
}

.welcome-text {
  font-size: 48rpx;
  font-weight: 600;
  color: #25336B;
  margin-bottom: 60rpx;
  text-align: center;
  margin-top: 20rpx;
}

.login-btn {
  margin: 40rpx 0;
  background-color: #25336B;
  color: #ffffff;
}



/* 手机号授权弹窗样式 */
.phone-auth-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4px);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 85%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.98);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
  overflow: hidden;
}

.modal-header {
  padding: 40rpx 30rpx 20rpx;
  text-align: center;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.modal-body {
  padding: 40rpx 30rpx;
  text-align: center;
}

.phone-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.auth-desc {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 30rpx;
  line-height: 1.6;
}

.auth-tips {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  text-align: left;
  padding-left: 30rpx;
}

.modal-footer {
  display: flex;
  padding: 30rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  gap: 20rpx;
}

.skip-btn, .auth-btn {
  flex: 1;
  margin: 0;
}

/* 加载蒙版样式 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4px);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 2000;
}

.loading-content {
  background: rgba(255, 255, 255, 0.98);
  padding: 40rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.loading-gif {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #333;
}