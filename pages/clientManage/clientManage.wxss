}

/* 文件夹列表样式 */
.folders-section {
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.add-btn {
  display: flex;
  align-items: center;
  padding: 8rpx 16rpx;
  background-color: #f0f5ff;
  border-radius: 30rpx;
}

.add-icon {
  font-size: 28rpx;
  color: #3E7BFA;
  margin-right: 6rpx;
}

.add-text {
  font-size: 24rpx;
  color: #3E7BFA;
}

.folders-list {
  display: flex;
  flex-direction: column;
}

.folder-item {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
  background: #fff;
  position: relative;
}

.folder-item.active {
  background: #f0f5ff;
  border-left: 6rpx solid #3E7BFA;
  padding-left: 24rpx;
}

.folder-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.folder-image {
  width: 100%;
  height: 100%;
}

.folder-info {
  flex: 1;
}

.folder-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 6rpx;
}

.folder-count {
  font-size: 24rpx;
  color: #999;
}

.folder-actions {
  display: flex;
  align-items: center;
}

.folder-delete-btn {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  background-color: #f5f5f5;
}

.folder-delete-btn:active {
  background-color: #e0e0e0;
}

.folder-delete-icon {
  font-size: 32rpx;
  color: #999;
  font-weight: bold;
}

