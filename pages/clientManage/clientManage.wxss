}

.container {
  padding: 0 20rpx;
}

.header {
  text-align: center;
  padding: 30rpx 0;
}

.title {
  font-size: 38rpx;
  font-weight: bold;
  color: #3E7BFA;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
