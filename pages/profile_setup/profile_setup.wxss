/* profile_setup.wxss */
page {
  background-color: #f5f7fa;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
}

.container {
  padding: 0 30rpx 30rpx; /* 移除顶部padding */
  min-height: 100vh;
}

.header {
  background: linear-gradient(135deg, #4a90e2 0%, #50e3c2 100%);
  color: white;
  padding: 80rpx 40rpx 40rpx;
  text-align: center;
  border-radius: 0 0 40rpx 40rpx;
  margin: 0 -30rpx 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
}

.title {
  font-size: 44rpx;
  font-weight: 600;
  color: #fff;
  margin-bottom: 12rpx;
  line-height: 1.2;
}

.subtitle {
  font-size: 26rpx;
  color: #f0f0f0;
  opacity: 0.9;
  line-height: 1.3;
}

.form-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
  width: 100%;
  box-sizing: border-box;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.avatar-tip {
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}

/* 名片识别按钮样式 */
.business-card-section {
  margin: 20rpx 0 30rpx 0;
  display: flex;
  justify-content: center;
}

.business-card-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.business-card-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.4);
}

.business-card-icon {
  font-size: 32rpx;
}

.business-card-text {
  font-size: 28rpx;
  font-weight: 500;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  border-bottom: 1rpx solid #e0e0e0;
  padding-bottom: 20rpx;
}

.form-item-vertical {
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
  border-bottom: 1rpx solid #e0e0e0;
  padding-bottom: 20rpx;
}

.form-item-vertical .form-label {
  width: 100%;
  margin-bottom: 20rpx;
  margin-right: 0;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  width: 180rpx; /* 固定宽度 */
  text-align: left; /* 文本左对齐 */
  margin-right: 20rpx;
  flex-shrink: 0; /* 防止被压缩 */
}

.bold {
  font-weight: 700;
}

.required::after {
  content: '*';
  color: #e74c3c;
  margin-left: 4rpx;
}

/* 分区样式 */
.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin: 40rpx 0 20rpx 0;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.section-icon {
  font-size: 28rpx;
}

.required-section {
  color: #e74c3c;
  border-bottom-color: #e74c3c;
}

.optional-section {
  color: #666;
  border-bottom-color: #e0e0e0;
}

.optional-tag {
  background: #f0f0f0;
  color: #999;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  margin-left: auto;
}

/* 公司职位列表样式 */
.company-position-list {
  width: 100%;
}

.company-position-item {
  margin-bottom: 20rpx;
  padding: 16rpx 0;
}

.company-position-inputs {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.company-input {
  flex: 1;
  background: transparent;
  border: none;
  border-bottom: 1rpx solid #e0e0e0;
  border-radius: 0;
  padding: 12rpx 0;
  height: 60rpx;
  font-size: 28rpx;
  color: #333;
}

.position-input {
  flex: 1;
  background: transparent;
  border: none;
  border-bottom: 1rpx solid #e0e0e0;
  border-radius: 0;
  padding: 12rpx 0;
  height: 60rpx;
  font-size: 28rpx;
  color: #333;
}

.remove-btn {
  width: 50rpx;
  height: 50rpx;
  min-width: 50rpx;
  max-width: 50rpx;
  border-radius: 50%;
  background-color: transparent;
  color: #999999;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  flex: none;
  box-sizing: border-box;
}

.remove-btn:active {
  background: #ff3742;
}

.add-company-position-btn {
  background: transparent;
  color: #1a73e8;
  border: 2rpx dashed #1a73e8;
  border-radius: 12rpx;
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  width: 100%;
  margin-top: 10rpx;
}

.add-company-position-btn:active {
  background: rgba(26, 115, 232, 0.1);
}

.add-icon {
  font-size: 32rpx;
  font-weight: bold;
}

/* 公司输入容器 */
.company-input-container {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.company-input-container .form-input {
  flex: 1;
}

.confirm-btn {
  background: #1a73e8;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 0 20rpx;
  height: 60rpx;
  line-height: 30px;
  font-size: 24rpx;
  white-space: nowrap;
}

.confirm-btn:active {
  background: #1557b0;
}

/* 标签样式优化 */
.tags-preview {
  margin-top: 12rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag-item {
  display: flex;
  align-items: center;
  background: #f0f8ff;
  border: 1rpx solid #1a73e8;
  color: #1a73e8;
  padding: 8rpx 12rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  gap: 8rpx;
}

.tag-remove {
  color: #999;
  font-size: 28rpx;
  cursor: pointer;
  padding: 0 4rpx;
}

.tag-remove:active {
  color: #e74c3c;
}

/* 预览模式样式 */
.preview-mode {
  margin-top: 8px;
  padding: 8px;
  background-color: #f8f9fa;
  border-radius: 4px;
  border-left: 3px solid #007aff;
}

.preview-label {
  font-size: 12px;
  color: #666;
  margin-right: 8px;
}

.preview-tag {
  background-color: #e3f2fd !important;
  color: #1976d2 !important;
  border: 1px dashed #1976d2 !important;
  opacity: 0.8;
}

/* 字符计数 */
.char-count {
  text-align: right;
  font-size: 20rpx;
  color: #999;
  margin-top: 8rpx;
}

/* 提示文字 */
.form-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.form-input {
  flex: 1; /* 占据剩余空间 */
  height: 60rpx;
  border: none; /* 移除边框 */
  padding: 0 10rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: transparent; /* 透明背景 */
}

.form-textarea {
  flex: 1;
  min-height: 120rpx;
  padding: 10rpx;
  border: none;
  font-size: 28rpx;
  color: #333;
  background-color: transparent;
  box-sizing: border-box;
  width: auto; /* 修正宽度 */
}

.form-item.textarea-item {
  align-items: flex-start; /* 让label和textarea顶部对齐 */
}

.form-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  line-height: 1.4;
}

.tags-preview {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 1rpx solid #e9ecef;
}

.tag-item {
  display: inline-block;
  background: #e3f2fd;
  color: #1976d2;
  padding: 6rpx 16rpx;
  margin: 4rpx 8rpx 4rpx 0;
  border-radius: 16rpx;
  font-size: 24rpx;
  border: 1rpx solid #bbdefb;
}

/* 输入容器样式优化 */
.input-container {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #e6e8eb;
  padding-bottom: 8rpx;
  margin-bottom: 15rpx;
}

.input-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 12rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
}

.icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.6;
}

/* 表单项间距优化 */
.form-item {
  margin-bottom: 20rpx;
}

/* 分区标题样式，与profile页面一致 */
.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #555;
  margin-bottom: 30rpx;
  position: relative;
}

.contact-section {
  margin-top: 30rpx;
}

.action-section {
  padding: 20rpx 0 80rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background-color: #1a73e8; /* 与profile页面保持一致的蓝色 */
  color: white;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  box-shadow: 0 6rpx 16rpx rgba(26, 115, 232, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.submit-btn.disabled {
  opacity: 0.7;
  background-color: #90A4AE; /* 淡灰蓝色 */
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(26, 115, 232, 0.2);
}